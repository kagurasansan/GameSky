<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="data"
            type="com.gamersky.kagurasansan.data.bean.ChannelListData.ResultBean"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:maxLines="2"
            android:layout_margin="10dp"
            android:textSize="17sp"
            android:textColor="#000000"
            android:text="@{data.title}"
            android:layout_marginLeft="10dp"
            android:ellipsize="end"
            android:layout_height="wrap_content"/>

      <RelativeLayout
          android:layout_width="match_parent"
          android:background="@color/item_bg"
          android:layout_below="@+id/tv_title"
          android:layout_marginBottom="20dp"
          android:layout_height="100dp">
          <ImageView
              android:id="@+id/iv_game_pic"
              app:imageUrl="@{data.thumbnailURLs.get(0)}"
              android:layout_width="75dp"
              android:layout_marginLeft="10dp"
              android:layout_height="match_parent"/>
          <TextView
              android:id="@+id/tv_game_title"
              android:layout_width="wrap_content"
              android:text="雨中希望"
              android:layout_toRightOf="@+id/iv_game_pic"
              android:layout_marginTop="10dp"
              android:layout_marginLeft="10dp"
              android:textColor="@color/main_black"
              android:layout_height="wrap_content"/>
          <LinearLayout
              android:id="@+id/ll_tag"
              android:layout_width="match_parent"
              android:layout_marginLeft="10dp"
              android:layout_marginTop="10dp"
              android:orientation="horizontal"
              android:layout_marginRight="10dp"
              android:layout_below="@+id/tv_game_title"
              android:layout_toRightOf="@+id/iv_game_pic"
              android:layout_height="wrap_content">
          </LinearLayout>
          <TextView
              android:id="@+id/tv_commit"
              android:layout_width="wrap_content"
              android:text="发表点评"
              android:textColor="@color/common_color_white"
              android:textSize="11sp"
              android:drawablePadding="2dp"
              android:layout_below="@+id/ll_tag"
              android:layout_toRightOf="@+id/iv_game_pic"
              android:layout_marginTop="10dp"
              android:gravity="center"
              android:paddingLeft="5dp"
              android:layout_marginLeft="10dp"
              android:paddingRight="8dp"
              android:background="@drawable/main_bg_push_commit"
              android:drawableLeft="@mipmap/comment_list_release"
              android:layout_height="wrap_content"/>
          <RelativeLayout
              android:layout_width="60dp"
              android:layout_alignParentRight="true"
              android:layout_margin="15dp"
              android:background="@drawable/main_bg_rating"
              android:layout_height="match_parent">
              <TextView
                  android:layout_width="wrap_content"
                  android:text="3.7"
                  android:layout_centerHorizontal="true"
                  android:textColor="@color/main_green"
                  android:textStyle="bold"
                  android:textSize="18sp"
                  android:layout_marginTop="20dp"
                  android:layout_height="wrap_content"/>
              <TextView
                  android:layout_width="wrap_content"
                  android:text="124人参与"
                  android:textSize="9sp"
                  android:layout_marginBottom="7dp"
                  android:layout_centerHorizontal="true"
                  android:layout_alignParentBottom="true"
                  android:layout_height="wrap_content"/>
          </RelativeLayout>
      </RelativeLayout>

      <View
         android:layout_width="match_parent"
         android:layout_height="1dp"
         android:layout_alignParentBottom="true"
         android:background="@color/bg_line"/>
    </RelativeLayout>
</layout>