<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="data"
            type="gamersky.kagurasansan.com.findgame.data.bean.GameSpecialBean.ResultBean"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="226dp">
        <ImageView
            android:id="@+id/iv_game_pic"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:layout_height="226dp"/>
        <View
            android:layout_width="match_parent"
            android:background="@drawable/findgame_bg_pic"
            android:layout_alignParentBottom="true"
            android:layout_height="match_parent">

        </View>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:layout_above="@+id/tv_des"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="daskajflkaj"
            android:layout_marginLeft="25dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_count"
            android:textColor="@color/main_green"
            android:layout_width="wrap_content"
            android:text=""
            android:layout_toRightOf="@+id/tv_title"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:layout_alignBottom="@+id/tv_title"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_des"
            android:layout_width="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="#cfcece"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:textSize="11sp"
            android:maxLines="2"
            android:text=""
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</layout>